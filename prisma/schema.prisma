generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
//clientes y usuario administrativo

model imagen {
  id Int @id @default(autoincrement())
  imagenUrl String?
  productoPk Int 
  producto producto  @relation(fields: [productoPk],references: [id])
  
}
model categoria{
  id Int @id @default(autoincrement())
  nombre String
  productos producto[]
}
model producto{
  id Int @id @default(autoincrement())
  nombre String
  imagenes imagen[]
  descripcion String?
  precio Decimal @db.Decimal(7,2)
  stock Int
  estado Boolean? @default(true) 
  categoriaFk Int @default(1)
  categoria categoria @relation(fields: [categoriaFk],references: [id])
  // relaciones 
  detallesventa detalleventa[] 

}
enum Tipo {
  cliente
  administrador
}

model direccion{
  id Int @id @default(autoincrement())
  bloque String?
  ciudad String?
  descripcion String?
  usuarioId Int 
  usuario usuario @relation(fields: [usuarioId],references: [id])
}
model usuario{
  id Int @id @default(autoincrement())
  nombre String
  imagenUrl String?
  correo String @unique
  clave String
  telefono String?
  direcciones direccion[] 
  refreshToken String?
  pin String?
  pinExpire BigInt?
  tipo Tipo @default(cliente)
  compras venta[]
} 

model venta{
  id Int @id @default(autoincrement())
  clienteFk Int 
  cliente usuario @relation(fields: [clienteFk],references: [id] ) 
  detalles detalleventa[]

} 

model detalleventa{
  id Int @id @default(autoincrement())
  ventaId Int 
  venta venta @relation(fields: [ventaId],references: [id])
  productoFk Int
  producto producto @relation(fields: [productoFk],references: [id])
} 


