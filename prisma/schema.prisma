// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
//clientes y usuario administrativo

model imagen {
  id Int @id @default(autoincrement())
  imagenUrl String?
  productoPk Int 
  producto producto  @relation(fields: [productoPk],references: [id])
  
}

model producto{
  id Int @id @default(autoincrement())
  nombre String
  imagenes imagen[]
  descripcion String?
  precio Decimal @db.Decimal(7,2)
  stock Int
  estado Boolean? @default(true) 
  // relaciones 
  detallesventa detalleventa[] 

}
enum Tipo {
  cliente
  administrador
}
model usuario{
  id Int @id @default(autoincrement())
  nombre String
  tipo Tipo
  compras venta[]
} 

model venta{
  id Int @id @default(autoincrement())
  clienteFk Int 
  cliente usuario @relation(fields: [clienteFk],references: [id] ) 
  detalles detalleventa[]

} 

model detalleventa{
  id Int @id @default(autoincrement())
  ventaId Int 
  venta venta @relation(fields: [ventaId],references: [id])
  productoFk Int
  producto producto @relation(fields: [productoFk],references: [id])
} 


